---
import { getCollection } from 'astro:content';

import ThoughtsLayout from '@layouts/ThoughtsLayout.astro';
import ThoughtTeaser from '../../components/thoughts/ThoughtTeaser.astro';

import '../../styles/thoughts.css';

const thoughts = (await getCollection('thoughts')).sort(
	(a, b) =>  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<ThoughtsLayout 
  title={"Thoughts"} 
  description={"Thoughts and experience that will help you to go through your life in the very best way"} 
  keywords={[
    "thoughts",
    "opinion",
    "life exploring",
    "psychology",
    "roman glushko thoughts",
    "roman hlushko thoughts",
    "life",
    "people",
    "management",
  ]} 
  image={'/thoughts/roman-glushko-thoughts.jpg'}
>
  <main class="thoughts-list">
    {thoughts.map((thought) => (
      <ThoughtTeaser
          thought={thought}
      />
    ))}
  </main>
</ThoughtsLayout>
            
