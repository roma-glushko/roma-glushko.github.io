---
import Avatar from "@components/Avatar.astro"

import "./CVHeader.css"

export interface Props {
    position: string;
}

const {position} = Astro.props;
---
<div class="cv-header-wrapper">
    <div class="logo">
      <div itemprop="image" class="avatar">
        <Avatar />
      </div>
    </div>
    <hgroup>
      <h2 itemprop="name" class="cv-name">
        Roman <strong>Glushko</strong>
      </h2>
      <h1 itemprop="jobTitle" class="cv-position">
        {position}
      </h1>
    </hgroup>
</div>