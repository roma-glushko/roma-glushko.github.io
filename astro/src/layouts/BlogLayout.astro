---
import Footer from '@components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
import ThemeSwitcher from '@components/ThemeSwitcher';
import MainNavigation from '@components/MainNavigation.astro';
import BlogHeader from '@components/BlogHeader.astro';
import BreadcrumbSnippet from '@components/BreadcrumbSnippet.astro';

import "@styles/theme.css"
import "@styles/general.css"

export interface Props {
	title: string;
	description: string;
	keywords: string[];
}

const { title, description, keywords } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="blogpost-list-page">
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			keywords={keywords} 
			image={'/blog/roman-glushko-in-the-process-of-work.jpg'}
		/>
	</head>
	<body>
		<div class="blog-listing-wrapper">
			<aside class="blog-sidebar">
				<div class="blog-header">
					<BlogHeader
						spaceTitle="Blog"
						spaceLink="/blog/"
						isListing={true}
					/>
					<MainNavigation space={"blog"} />
			  	</div>
				<div class="blog-intro">
					Technical notes about machine learning, data science, math and
					software engineering. Recording what I learn everyday.
				</div>
				<div class="misc">
					<div class="theme-switcher">
					<ThemeSwitcher client:load />
					</div>
				</div>
			</aside>
			<slot />
		</div>
		<div class="clearfix" />
		<Footer />
		<BreadcrumbSnippet crumbs={[{ "/blog/": "Blog" }]} />
	</body>
</html>
